    "colorTheme": "dark",
    "isTransparent": false,
    "displayMode": "regular",
    "locale": "en"
  }
    </script>
  </div>
  <!-- TradingView Widget END -->

    <div class="container-fluid">
        <div class="row m-4 g-4">
            <div class="col-md-4">
                <div class="card text-bg-warning h-100" >
                    <div class="card-body  p-3">
                      <h5 class="card-title mb-4">ACCOUNT BALANCE</h5>
                      <h5 class="card-text mb-4">$<%= user.balance %> </h5>
                      <a href="/deposit" class="btn btn-dark text-warning w-100 mb-3">Deposit Funds</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-dark bg-primary h-100" >
                    <div class="card-body  p-3">
                      <h5 class="card-title mb-4">EARNED TOTAL</h5>
                      <h5 class="card-text mb-4">$0.00 </h5>
                      <a href="/withdraw" class="btn btn-dark text-primary w-100 mb-3">Withdraw Funds</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-dark bg-success h-100" >
                    <div class="card-body  p-3">
                      <h5 class="card-title mb-4">TOTAL WITHDRAWAL</h5>
                      <h5 class="card-text mb-4">$0.00 </h5>
                      <a href="/withdrawal-history" class="btn btn-dark text-success w-100 mb-3">Withdrawal History</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-4 g-4">
            <div class="col-md-4">
              <div class="card text-bg-info h-100" >
                <div class="card-body  p-3">
                  <h5 class="card-title mb-3">TOTAL DEPOSIT</h5>
                  <h5 class="card-text mb-2">$0.00 </h5>
                  <a href="/deposit-history" class="btn btn-dark text-info w-100 mb-3">Deposit History</a>
                </div>
              </div>
            </div>
            <div class="col-md-4">
                <div class="card text-dark bg-danger h-100" >
                    <div class="card-body  p-3">
                      <h5 class="card-title mb-3">ACTIVE DEPOSIT</h5>
                      <h5 class="card-text mb-2">$0.00 </h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
              <div class="card text-dark bg-warning h-100" >
                <div class="card-body  p-3">
                  <h5 class="card-title mb-3">TOTAL BONUS</h5>
                  <h5 class="card-text mb-2">$0.00 </h5>
                </div>
            </div>
            </div>
        </div>
    </div>

    <!-- TradingView Widget BEGIN -->
    <div class="tradingview-widget-container "  >
    <div id="tradingview_537b9"></div>
    <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/BTCUSDT/?exchange=BINANCE" rel="noopener" target="_blank"></div>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
    new TradingView.widget(
    {
    "autosize": true,
    "symbol": "BINANCE:BTCUSDT",
    "interval": "D",
    "timezone": "Etc/UTC",
    "theme": "dark",
    "style": "1",
    "locale": "en",
    "toolbar_bg": "#f1f3f6",
    "enable_publishing": false,
    "allow_symbol_change": true,
    "container_id": "tradingview_537b9"
  }
    );
    </script>
  </div>
  <!-- TradingView Widget END -->

</body>
</html>