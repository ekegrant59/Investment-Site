<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Withdrawal History</title>
    <%- include('partials/head-links') %>
</head>
<body>
    <%- include('partials/usernav') %>
    <div class="aboutHead">
        <h3 class="about-us-heading text-center my-4">Withdrawal History</h3>
    </div>

    <div class="container-fluid">
        <div class="row mt-sm-5 mx-sm-5 m-2 ">
            <div class="col border border-white p-3"><b>DATE</b></div>
            <div class="col border border-white p-3"><b>ADDRESS</b></div>
            <div class="col border border-white p-3"><b>AMOUNT</b></div>
            <div class="col border border-white p-3"><b>STATUS</b></div>
        </div>
    </div>

    <% if (withdrawals) { %>
        <div class="container-fluid">
            <% withdrawals.forEach(withdrawal =>{ %>
                <div class="row mx-sm-5 mx-2 ">
                    <div class="col-3 p-3 border border-white text-nowrap overflow-scroll overflow-y-hidden"><b><%= withdrawal.date %> </b></div>
                    <div class="col-3 p-3 border border-white text-nowrap overflow-sm-scroll overflow-y-hidden"><b><%= withdrawal.address %> </b></div>
                    <div class="col-3 p-3 border border-white text-nowrap"><b><%= withdrawal.amount %> </b></div>
                    <div class="col-3 p-3 border border-white text-nowrap"><b><%= withdrawal.status %> </b></div>
                </div>
            <% }) %> 
        </div>
    <% } %>
    
</body>
</html>